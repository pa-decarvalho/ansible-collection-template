---
dependency:
  name: galaxy

driver:
  name: docker

platforms:
  - name: ${USER}-{{ collection_name | replace('_', '-') }}-${MOLECULE_DISTRO:-ubuntu2404}
    image: geerlingguy/docker-${MOLECULE_DISTRO:-ubuntu2404}-ansible:latest
    command: ${MOLECULE_DOCKER_COMMAND:-""}
    volumes:
      - /sys/fs/cgroup:/sys/fs/cgroup:ro

provisioner:
  name: ansible
  options:
    vvv: true
  env:
    ANSIBLE_ROLES_PATH: ../../roles
