---
dependency:
  name: galaxy

driver:
  name: docker

platforms:
  - name: ${USER}-${MOLECULE_SCENARIO_NAME}-{{ collection_name | replace('_', '-') }}-${MOLECULE_DISTRO}
    image: geerlingguy/docker-${MOLECULE_DISTRO}-ansible:latest
    command: ${MOLECULE_DOCKER_COMMAND}
    volumes:
      - /sys/fs/cgroup:/sys/fs/cgroup:rw
    cgroupns_mode: host
    privileged: true
    pre_build_image: true

provisioner:
  name: ansible
